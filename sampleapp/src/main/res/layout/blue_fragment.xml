<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/blue_layout"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="de.apoehlmann.sampleapp.presentation.BlueFragment"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@android:color/white"
            android:id="@+id/latestTag" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/latestTag"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/tag_title_bottom_margin"
            android:text="@string/tag_title"
            android:textColor="@android:color/white"
            android:id="@+id/title" />
</android.support.constraint.ConstraintLayout>